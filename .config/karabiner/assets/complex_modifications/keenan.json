{
    "title": "My Custom Maps",
    "rules": [
        {
            "description": "Caps -> Hyper",
            "manipulators": [
                {
                    "from": {
                        "key_code": "caps_lock"
                    },
                    "to": [
                        {
                            "key_code": "left_shift",
                            "modifiers": ["left_command", "left_control", "left_option"]
                        }
                    ],
                    "to_if_alone": [{ "key_code": "escape" }],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Hyper + J -> Down",
            "manipulators": [
                {
                    "from": {
                        "key_code": "j",
                        "modifiers": {
                            "mandatory": ["left_option", "left_command", "left_control", "left_shift"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "down_arrow"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Hyper + K -> Up",
            "manipulators": [
                {
                    "from": {
                        "key_code": "k",
                        "modifiers": {
                            "mandatory": ["left_option", "left_command", "left_control", "left_shift"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "up_arrow"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Hyper + H -> Left",
            "manipulators": [
                {
                    "from": {
                        "key_code": "h",
                        "modifiers": {
                            "mandatory": ["left_option", "left_command", "left_control", "left_shift"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "left_arrow"
                        }
                    ],
                    "type": "basic"
                }
            ]
        },
        {
            "description": "Hyper + L -> Right",
            "manipulators": [
                {
                    "from": {
                        "key_code": "l",
                        "modifiers": {
                            "mandatory": ["left_option", "left_command", "left_control", "left_shift"],
                            "optional": ["any"]
                        }
                    },
                    "to": [
                        {
                            "key_code": "right_arrow"
                        }
                    ],
                    "type": "basic"
                }
            ]
        }
    ]
}
